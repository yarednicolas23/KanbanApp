{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/types/*"]
    },
    "jsx": "react-native",
    "esModuleInterop": true,
    "types": ["react-native-reanimated", "jest"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/types/declarations.d.ts",
    "src/types/components.d.ts",
    "node_modules/react-native-reanimated/lib/typescript/reanimated2/*.d.ts"
  ]
}
